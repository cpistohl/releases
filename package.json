{
  "name": "calender",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "scripts": {
    "css": "bunx @tailwindcss/cli -i src/client/styles.css -o src/client/compiled.css",
    "css:watch": "bunx @tailwindcss/cli -i src/client/styles.css -o src/client/compiled.css --watch",
    "start": "bun run css && bun run src/server/server.ts",
    "dev": "bun run css:watch & bun --hot src/server/server.ts",
    "test": "bun test"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "tailwindcss": "^4.1.18"
  }
}
